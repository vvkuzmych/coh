<div class="search-container">
  <div class="search-header">
    <h1>üîç Document Search</h1>
    <p class="subtitle">Powered by OpenSearch</p>
  </div>

  <!-- Search Form -->
  <div class="search-form-card">
    <%= form_with url: search_path, method: :get, local: true, class: "search-form" do |f| %>
      <div class="search-input-group">
        <%= f.text_field :q, 
            value: @query,
            placeholder: "Search documents...",
            class: "search-input",
            autofocus: true %>
        
        <%= f.select :status,
            options_for_select(
              [
                ['All Statuses', ''],
                ['Uploaded', 'uploaded'],
                ['Reviewed', 'reviewed'],
                ['Signed', 'signed'],
                ['Archived', 'archived']
              ],
              @status
            ),
            {},
            class: "status-select" %>
        
        <%= f.submit "Search", class: "search-button" %>
      </div>

      <div class="search-tips">
        <small>
          üí° Tips: Try "contract", "payment", "agreement", etc.
        </small>
      </div>
    <% end %>
  </div>

  <!-- Flash Messages -->
  <% if flash[:success] %>
    <div class="alert alert-success">
      ‚úÖ <%= flash[:success] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert alert-info">
      ‚ÑπÔ∏è <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      ‚ö†Ô∏è <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Search Results -->
  <% if @documents && @documents.any? %>
    <div class="results-header">
      <h2>Search Results</h2>
      <span class="result-count"><%= @total %> document(s) found</span>
    </div>

    <div class="results-grid">
      <% @documents.each do |doc| %>
        <div class="result-card">
          <div class="result-header">
            <h3 class="result-title">
              <% if doc[:highlight] && doc[:highlight][:title] %>
                <%= raw doc[:highlight][:title].first %>
              <% else %>
                <%= doc[:title] %>
              <% end %>
            </h3>
            <span class="result-score">Score: <%= doc[:score].round(2) %></span>
          </div>

          <div class="result-body">
            <% if doc[:highlight] && doc[:highlight][:content] %>
              <p class="result-excerpt">
                <%= raw doc[:highlight][:content].first %>...
              </p>
            <% else %>
              <p class="result-excerpt">
                <%= truncate(doc[:content], length: 200) %>
              </p>
            <% end %>
          </div>

          <div class="result-footer">
            <div class="result-footer-left">
              <span class="result-status status-<%= doc[:status] %>">
                <%= doc[:status]&.humanize %>
              </span>
              <span class="result-id">ID: <%= doc[:id] %></span>
            </div>
            <a href="<%= document_path(doc[:id]) %>" class="view-link" data-turbo="false">
              View Document ‚Üí
            </a>
          </div>
        </div>
      <% end %>
    </div>
  <% elsif @query.present? %>
    <div class="no-results">
      <div class="no-results-icon">üîç</div>
      <h3>No documents found</h3>
      <p>Try different keywords or check your spelling</p>
    </div>
  <% else %>
    <div class="welcome-message">
      <div class="welcome-icon">üìö</div>
      <h3>Welcome to Document Search</h3>
      <p>Enter keywords above to search through documents</p>
      
      <div class="example-searches">
        <h4>Try these searches:</h4>
        <ul>
          <li><a href="<%= search_path(q: 'contract') %>">contract</a></li>
          <li><a href="<%= search_path(q: 'payment') %>">payment</a></li>
          <li><a href="<%= search_path(q: 'agreement') %>">agreement</a></li>
          <li><a href="<%= search_path(q: 'test') %>">test</a></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>

